{
  "name": "graphmind-api",
  "version": "0.1.0",
  "description": "GraphMind Voice-First Knowledge Assistant API",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "wrangler dev",
    "dev:frontend": "cd src/frontend && vite",
    "build": "cd src/frontend && vite build",
    "preview": "cd src/frontend && vite preview",
    "deploy": "wrangler deploy",
    "deploy:frontend": "cd src/frontend && wrangler pages deploy --commit-dirty=true",
    "db:create": "wrangler d1 create graphmind-db",
    "db:migrate:local": "wrangler d1 migrations apply graphmind-db --local",
    "db:migrate": "wrangler d1 migrations apply graphmind-db",
    "db:shell": "wrangler d1 execute graphmind-db --local --command",
    "kv:create": "wrangler kv:namespace create GRAPHMIND_KV",
    "cf-typegen": "wrangler types",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^4.0.9",
    "vite": "^7.2.2",
    "vitest": "^4.0.9",
    "wrangler": "^4.47.0",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "falkordb": "^6.3.1",
    "jsonwebtoken": "^9.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "redis": "^5.9.0",
    "redis-on-workers": "^0.4.1"
  }
}
